
.comment_form_btn{
  cursor: pointer;
  width:  70px;
  height: 70px;
  border-radius: 50%;
  background-position: center center;
  text-align: center;
}
.comment_form_btn:hover{
  transform: translate3d(0, 5px, 0);
}


.comment_form_long_btn{
  cursor: pointer;
  width:  120px;
  height: 75px;
  background-position: center center;
  text-align: center;
  border-radius: 14px;
}
.comment_form_long_btn:hover{
  transform: translate3d(0, 5px, 0);
}



.radio{
  display: none;
}
.radio_emotion{
  height: 65px;
  width: 65px;
  border-radius: 50%;
}
.radio_emotion:hover{
  transform: translate3d(0, 5px, 0);
}
.radio + .radio_emotion{
  filter: grayscale(70%);
  border: solid transparent 5px;
}
.radio:checked + .radio_emotion{
  filter: grayscale(0%);
  border: groove white 5px;
}


.radio_expression{
  height: 40px;
  width: 60px;
  border-radius: 12px;
}
.radio_expression:hover{
  transform: translate3d(0, 5px, 0);
}
.radio + .radio_expression{
  filter: grayscale(70%);
  border: solid transparent 5px;
}
.radio:checked + .radio_expression{
  filter: grayscale(0%);
  border: groove white 5px;
}

.submit_button{
  height:70px;
  width: 80px;
}
.submit_button:disabled{
  filter: grayscale(100%);
}
.submit_button:hover{
  transform: translate3d(8px, 0, 0);
}
