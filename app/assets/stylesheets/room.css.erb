
.comment_form_btn{
  cursor: pointer;
  width:  70px;
  height: 70px;
  border-radius: 50%;
  background-position: center center;
  text-align: center;
}
.comment_form_btn:hover{
  transform: translate3d(0, 5px, 0);
}


.comment_form_long_btn{
  cursor: pointer;
  width:  120px;
  height: 75px;
  background-position: center center;
  text-align: center;
  border-radius: 14px;
}
.comment_form_long_btn:hover{
  transform: translate3d(0, 5px, 0);
}



.radio{
  display: none;
}
.radio_emotion{
  height: 75px;
  width: 75px;
  border-radius: 50%;
}
.radio_emotion:hover{
  transform: translate3d(0, 5px, 0);
}
.radio + .radio_emotion{
	border: 3px black solid;
}
.radio:checked + .radio_emotion{
	border: 3px #ff0000 solid;
}


.radio_expression{
  height: 70px;
  width: 110px;
  border-radius: 15px;
}
.radio_expression:hover{
  transform: translate3d(0, 5px, 0);
}
.radio + .radio_expression{
	border: 3px black solid;
}
.radio:checked + .radio_expression{
	border: 3px #ff0000 solid;
}

.submit_button{
  height:80px;
  width: 120px;
}
