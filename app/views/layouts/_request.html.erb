<%
  request_id = "request_" + current_user.to_s
%>

<div id='<%= request_id %>'>
  <% if current_user != nil %>
    <table>
      <tbody>
        <% requests = Friend.where(friendid: current_user, request:true, allow:false) %>
          <% if 0 < requests.length %>
            <% requests.each do |request| %>
              <tr>
                <td><%= request.userid %> からフォロー申請が来ています</td>

                <td>
                  <div class="follow_allow_link">
                      <%= link_to 'フォロー申請許可', friends_edit1_path(userid:current_user, friendid:request.userid), method: :get %>
                  </div>
                </td>

                <td>
                  <div class="follow_reject_link">
                    <%= link_to 'フォロー申請削除', friends_edit2_path(userid:request.userid, friendid:current_user), method: :get %>
                  </div>
                </td>

              </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
  <% end %>
</div>
