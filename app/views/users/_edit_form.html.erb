<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="" style="float:left">
    <center>
      <table>
        <tbody>
          <tr>
            <td class="user_create_label">名前　　　</td>
            <td><%= form.text_field :name, class:"user_create_field", placeholder: "名前" %></td>
          </tr>

          <tr>
            <td class="user_create_label">ユーザーID　　　</td>
            <td><%= form.text_field :userid, class:"user_create_field", placeholder: "ユーザーID" %></td>
          </tr>

          <tr>
            <td class="user_create_label">タグ付け　　　</td>
            <td><%= form.text_area :description, class:"user_create_field", placeholder: "タグ付け" %></td>
          </tr>

          <tr>
            <td class="user_create_label">プロフィール画像   </td>
            <td>
              <center><%= form.label :image, "プロフィール画像を追加", class:"image_input_btn" %></center>
              <%= form.file_field :image, class:"image_form" %>
            </td>
          </tr>
        </tbody>
      </table>


      <p><%= form.submit "更新する", class:"user_edit_link" %></p>
    </center>
  </div>

  <center>
    <table>
      <tbody>

        <tr>
          <td class="user_create_label">現在のパスワード</td>
          <td><%= form.password_field :current_password, class:"user_create_field", placeholder: "現在のパスワード" %></td>
        </tr>

        <tr>
          <td class="user_create_label">パスワード　　　</td>
          <td><%= form.password_field :password, class:"user_create_field", placeholder: "パスワード" %></td>
        </tr>

        <tr>
          <td class="user_create_label">パスワード(再確認)　　　</td>
          <td><%= form.password_field :password_confirmation, class:"user_create_field", placeholder: "パスワード(再確認)" %></td>
        </tr>


      </tbody>
    </table>
  </center>

  <br><br>

  <center>
    <table>
      <tbody>
        <tr>
          <td><%= form.submit "更新する", class:"user_edit_link" %></td>
        </tr>
      </tbody>
    </table>
  </center>
<% end %>
