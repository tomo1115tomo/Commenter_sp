<%= form_with(model: user) do |form| %>

  <center>
    <table>
      <tbody>
        <tr>
          <td><%= form.label "名前　　　", class:"user_create_label" %></td>
          <td><%= form.text_field :name, class:"user_create_field", id:"user_create_field", placeholder: "名前" %></td>
        </tr>

        <tr>
          <td><%= form.label "ユーザーID　　　", class:"user_create_label" %></td>
          <td><%= form.text_field :userid, class:"user_create_field", placeholder: "ユーザーID" %></td>
        </tr>

        <tr>
          <td><%= form.label "パスワード　　　", class:"user_create_label" %></td>
          <td><%= form.password_field :password, class:"user_create_field", placeholder: "パスワード" %></td>
        </tr>

        <tr>
          <td><%= form.label "パスワード(再確認)　　　", class:"user_create_label" %></td>
          <td><%= form.password_field :password_confirmation, class:"user_create_field", placeholder: "パスワード(再確認)" %></td>
        </tr>
      </tbody>
    </table>
  </center>

  <br><br>

  <center>
    <%= form.submit "新規登録", class:"user_edit_link" %>
  </center>
<% end %>


<script type="text/javascript">
  window.addEventListener('load', function() {
    document.getElementById('user_create_field').focus();
  })
</script>
